{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "name", "description", "type", "rarity", "stackable", "value"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "nameKey": { "type": "string", "description": "Translation key for name (format: item.{id}.name)" },
    "description": { "type": "string" },
    "descriptionKey": { "type": "string", "description": "Translation key for description (format: item.{id}.description)" },
    "type": {
      "enum": ["weapon", "armor", "accessory", "consumable", "material", "quest"]
    },
    "rarity": {
      "enum": ["common", "uncommon", "rare", "epic", "legendary", "mythic"]
    },
    "stackable": { "type": "boolean" },
    "maxStack": { "type": "number" },
    "value": { "type": "number" },
    "requirements": {
      "type": "object",
      "properties": {
        "level": { "type": "number" },
        "class": {
          "type": "array",
          "items": { "type": "string" }
        },
        "stats": { "type": "object" }
      }
    },
    "equipmentSlot": {
      "enum": ["weapon", "offhand", "helmet", "chest", "legs", "boots", "gloves", "ring1", "ring2", "amulet"]
    },
    "statBonuses": { "type": "object" },
    "combatStatBonuses": { "type": "object" },
    "consumableEffect": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["heal", "mana", "buff", "experience"]
        },
        "amount": { "type": "number" },
        "buffId": { "type": "string" },
        "duration": { "type": "number" }
      }
    },
    "maxEnchantments": { "type": "number", "description": "Maximum number of enchantments this item can have (defaults based on rarity if not specified)" },
    "enchantmentSlots": { "type": "number", "description": "Number of enchantment slots available (synonym for maxEnchantments)" }
  }
}

