{
  "name": "@idle-rpg/server",
  "version": "1.0.0",
  "description": "Backend server for Tales of Heroes, Legends & Beasts",
  "main": "./dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "migrate": "node scripts/migrate.js",
    "migrate:tracked": "node scripts/migrate-with-tracking.js",
    "migrate:dry-run": "node scripts/migrate-with-tracking.js --dry-run",
    "migrate:rollback": "node scripts/rollback-migration.js",
    "import-monsters": "node scripts/import-monsters.js",
    "import-all-data": "node scripts/import-all-data.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "socket.io": "^4.7.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "@idle-rpg/shared": "*"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
